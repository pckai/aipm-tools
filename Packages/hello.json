{
    "name": "hello",
    "version": "0.1.0",
    "description": "A tool to say hello",
    "release_url": "https://github.com/pckai/hello-repo/releases",
    "platforms": {
        "linux": "hello-linux",
        "macos": "hello-macos",
        "windows": "hello.exe"
    },
    "runtime": {
        "name": "python",
        "version": "3.9",
        "commands": [
            "python3 -m pip install --user requests>=2.26.0",
            "python3 -m pip install --user click>=8.0.0"
        ]
    },
    "endpoints": [
        {
            "path": "/greet",
            "method": "POST",
            "request_type": "application/json",
            "response_type": "application/json",
            "description": "Sends a greeting to a specified name"
        }
    ]
}
